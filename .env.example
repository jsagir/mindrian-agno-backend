# Mindrian AgentOS Environment Variables
# Copy to .env and fill in your values
# In Replit: Add these as Secrets (lock icon in sidebar)

# =============================================================================
# REQUIRED: Google AI (Gemini 3)
# =============================================================================
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# REQUIRED: Pinecone (PWS Brain RAG)
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=neo4j-knowledge-base

# =============================================================================
# REQUIRED: Tavily (Web Search & Research)
# =============================================================================
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# OPTIONAL: Neo4j (Opportunity Banking)
# =============================================================================
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# OPTIONAL: Additional LLM Providers
# =============================================================================
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Environment
ENVIRONMENT=production
